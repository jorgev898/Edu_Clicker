---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Register Page">
  <main class="flex items-center justify-center h-screen bg-gradient-to-b from-blue-200 to-white">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
      <div class="flex justify-center mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-book" width="64" height="64" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2b43f1" fill="none" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M3 19a9 9 0 0 1 9 0a9 9 0 0 1 9 0" />
          <path d="M3 6a9 9 0 0 1 9 0a9 9 0 0 1 9 0" />
          <path d="M3 6l0 13" />
          <path d="M12 6l0 13" />
          <path d="M21 6l0 13" />
        </svg>
      </div>

      <h2 class="text-center text-4xl font-bold text-gray-800 mb-4">EduClicker</h2>
      <p class="text-center text-gray-600 mb-8">Create your account</p>

      <form action="/register">
        <div>
          <input type="text" id="fullname" name="fullname" placeholder="Full Name" class="p-2 block w-full border border-gray-300 rounded-t-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
        </div>

        <div>
          <input type="email" id="email" name="email" placeholder="Email" class="p-2 block w-full border-t-0 border border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
        </div>

        <div>
          <input type="password" id="password" name="password" placeholder="Password" class="p-2 block w-full border-t-0 border border-gray-300 rounded-b-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
        </div>

        <div class="flex justify-center mt-6">
          <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Register</button>
        </div>
      </form>

      <div class="mt-4 text-center">
        <p class="text-sm text-gray-600">
          Already have an account? 
          <a href="/" class="text-blue-600 hover:text-blue-800">Sign in here</a>
        </p>
      </div>
    </div>
  </main>
</Layout>
