---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Profile Page">
	<div class="flex h-full w-full items-center justify-center p-4">
		<div class="w-full max-w-5xl rounded-lg bg-white shadow-lg">
			<div class="p-6">
				<div class="flex flex-col gap-6 md:flex-row">
					<div class="flex flex-col items-center md:items-start">
						<div class="mb-4 h-32 w-32 overflow-hidden rounded-full bg-gray-300">
							<img
								src="/placeholder.svg?height=128&width=128"
								alt=""
								class="h-full w-full object-cover"
							/>
						</div>
						<h2 class="mb-1 text-2xl font-bold">John Doe</h2>
						<span class="mb-4 inline-block rounded-md bg-gray-200 px-3 py-1 text-black"
							>Student</span
						>
					</div>
					<div class="flex-grow">
						<div class="mb-4 flex justify-end">
							<button
								class="mt-2 flex items-center rounded-md bg-black px-4 py-2 text-white hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500"
							>
								<i class="fas fa-pencil-alt mr-2"></i> Edit Profile
							</button>
						</div>
					</div>
				</div>
				<!-- InformaciÃ³n de contacto -->
				<div class="mt-4 space-y-2 text-gray-600">
					<div class="flex items-center gap-4">
						<span class="flex items-center">
							<i class="fas fa-envelope mr-2"></i>
							johndoe@example.com
						</span>
						<span class="flex items-center">
							<i class="fas fa-phone mr-2"></i>
							+1 234 567 890
						</span>
					</div>
					<div class="flex items-center">
						<i class="fas fa-map-marker-alt mr-2"></i>
						<span>New York, USA</span>
					</div>
				</div>
				<div class="mt-6">
					<h3 class="mb-2 text-lg font-semibold">Bio</h3>
					<p class="text-gray-600">
						Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor
						incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
						exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
					</p>
				</div>
				<div class="mt-6">
					<h3 class="mb-2 text-lg font-semibold">Student Information</h3>
					<p class="mb-4 text-gray-600">Grade: 11th</p>
					<div class="flex items-center justify-between">
						<h4 class="text-md font-semibold">Courses</h4>
						<div class="flex gap-2">
							<span class="inline-block rounded-full bg-gray-200 px-3 py-1 text-black"
								>Mathematics</span
							>
							<span class="inline-block rounded-full bg-gray-200 px-3 py-1 text-black">Physics</span
							>
							<span class="inline-block rounded-full bg-gray-200 px-3 py-1 text-black"
								>Literature</span
							>
							<span class="inline-block rounded-full bg-gray-200 px-3 py-1 text-black">History</span
							>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
