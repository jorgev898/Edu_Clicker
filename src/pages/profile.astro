---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Profile Page">
  <div class="min-h-screen bg-gradient-to-b from-blue-200 to-white flex items-center justify-center p-4">
    <div class="w-full max-w-3xl bg-white rounded-lg shadow-lg">
      <div class="p-6">
        <div class="flex flex-col md:flex-row gap-6">
          <div class="flex flex-col items-center md:items-start">
            <div class="w-32 h-32 rounded-full bg-gray-300 overflow-hidden mb-4">
              <img
                src="/placeholder.svg?height=128&width=128"
                alt=""
                class="w-full h-full object-cover" 
              />
            </div>
            <h2 class="text-2xl font-bold mb-1">John Doe</h2>
            <span class="inline-block bg-gray-200 text-black py-1 px-3 rounded-md mb-4">Student</span>
          </div>
          <div class="flex-grow">
            <div class="flex justify-end mb-4">
                <button class="mt-2 bg-black text-white py-2 px-4 rounded-md hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500 flex items-center">
                    <i class="fas fa-pencil-alt mr-2"></i> Edit Profile
                  </button>
                  
            </div>
          </div>
        </div>
        <!-- InformaciÃ³n de contacto -->
        <div class="space-y-2 text-gray-600 mt-4">
          <div class="flex items-center gap-4">
            <span class="flex items-center">
              <i class="fas fa-envelope mr-2"></i> 
              johndoe@example.com
            </span>
            <span class="flex items-center">
              <i class="fas fa-phone mr-2"></i> 
              +1 234 567 890
            </span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-map-marker-alt mr-2"></i>
            <span>New York, USA</span>
          </div>
        </div>
        <div class="mt-6">
          <h3 class="text-lg font-semibold mb-2">Bio</h3>
          <p class="text-gray-600">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
          </p>
        </div>
        <div class="mt-6">
          <h3 class="text-lg font-semibold mb-2">Student Information</h3>
          <p class="text-gray-600 mb-4">Grade: 11th</p>
          <div class="flex justify-between items-center">
            <h4 class="text-md font-semibold">Courses</h4>
            <div class="flex gap-2">
              <span class="inline-block bg-gray-200 text-black py-1 px-3 rounded-full">Mathematics</span>
              <span class="inline-block bg-gray-200 text-black py-1 px-3 rounded-full">Physics</span>
              <span class="inline-block bg-gray-200 text-black py-1 px-3 rounded-full">Literature</span>
              <span class="inline-block bg-gray-200 text-black py-1 px-3 rounded-full">History</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
