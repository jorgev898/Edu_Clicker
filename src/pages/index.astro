---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login Page">
  <main class="flex items-center justify-center h-screen bg-gradient-to-b from-blue-200 to-white">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
      <div class="flex justify-center mb-6">
        <img src="/logo.png" alt="Logo" class="h-16">
      </div>

      <h2 class="text-center text-4xl font-bold text-gray-800 mb-4">EduClicker</h2>
      <p class="text-center text-gray-600 mb-8">Sign in to your account</p>

      <form action="/login">
        <div>
          <input type="text" id="username" name="username" placeholder="Username" class="p-2 block w-full border border-gray-300 rounded-t-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
        </div>

        <div>
          <input type="password" id="password" name="password" placeholder="Password" class="p-2 block w-full border border-gray-300 rounded-b-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
        </div>

        <div class="flex justify-center mt-6">
          <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">Sign In</button>
        </div>
      </form>

      <div class="mt-4 text-center">
        <p class="text-sm text-gray-600">
          Don't have an account? 
          <a href="/register" class="text-blue-600 hover:text-blue-800">Register here</a>
        </p>
      </div>
    </div>
  </main>
</Layout>
