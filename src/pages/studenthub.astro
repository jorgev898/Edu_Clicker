---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Student Hub">
  <div class="flex h-screen">
    <aside class="w-64 bg-white shadow-md flex flex-col">
      <div class="p-4">
        <h2 class="text-2xl font-bold text-gray-800">EduClicker</h2>
      </div>
      <nav class="flex-1 mt-6 space-y-2">
        <a href="/dashboard" class="block py-2 px-4 text-gray-700 hover:bg-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home-2 mr-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#979797" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M5 12l-2 0l9 -9l9 9l-2 0" />
            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
            <path d="M10 12h4v4h-4z" />
          </svg>
          Dashboard
        </a>
        <a href="/courses" class="block py-2 px-4 text-gray-700 hover:bg-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-book-2 mr-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#979797" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M19 4v16h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12z" />
            <path d="M19 16h-12a2 2 0 0 0 -2 2" />
            <path d="M9 8h6" />
          </svg>
          Courses
        </a>
        <a href="/calendar" class="block py-2 px-4 text-gray-700 hover:bg-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar-event mr-2" width="20" height="20  " viewBox="0 0 24 24" stroke-width="1.5" stroke="#979797" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M4 5m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
            <path d="M16 3l0 4" />
            <path d="M8 3l0 4" />
            <path d="M4 11l16 0" />
            <path d="M8 15h2v2h-2z" />
          </svg>
          Calendar
        </a>
        <a href="/grades" class="block py-2 px-4 text-gray-700 hover:bg-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chart-bar mr-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#979797" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M3 12m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v6a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
            <path d="M9 8m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v10a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
            <path d="M15 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
            <path d="M4 20l14 0" />
          </svg>
          Grades
        </a>
        <a href="/settings" class="block py-2 px-4 text-gray-700 hover:bg-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-settings-2 mr-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#979797" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M19.875 6.27a2.225 2.225 0 0 1 1.125 1.948v7.284c0 .809 -.443 1.555 -1.158 1.948l-6.75 4.27a2.269 2.269 0 0 1 -2.184 0l-6.75 -4.27a2.225 2.225 0 0 1 -1.158 -1.948v-7.285c0 -.809 .443 -1.554 1.158 -1.947l6.75 -3.98a2.33 2.33 0 0 1 2.25 0l6.75 3.98h-.033z" />
            <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
          </svg>
          Settings
        </a>
      </nav>
      <div class="p-4">
        <a href="/logout" class="block py-2 px-4 text-gray-700 hover:bg-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout mr-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#979797" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
            <path d="M9 12h12l-3 -3" />
            <path d="M18 15l3 -3" />
          </svg>
          Logout
        </a>
      </div>
    </aside>

    <!-- Main content -->
    <main class="flex-1 p-6 bg-gray-100">
      <!-- Aquí puedes añadir el contenido principal de la página -->
      <h1 class="text-3xl font-bold">Welcome to the Student Hub!</h1>
    </main>
  </div>
</Layout>
